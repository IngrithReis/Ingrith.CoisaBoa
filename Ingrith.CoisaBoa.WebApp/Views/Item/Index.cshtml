@model IEnumerable<Ingrith.CoisaBoa.WebApp.Domain.Item>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h1>Olá, @ViewData["Administrador"]!</h1>
<h4>Selecione a opção desejada: </h4>
<hr />
<div class=container>
    <div class="row">
        <div class="col">
            @Html.ActionLink("Criar categoria", "Create", "CategoriaItem",  null, new { @class = "btn btn-primary", style="background-color:darkgreen"})<br />
        </div>
        <div class="col">
            @Html.ActionLink("Criar Item", "Create", "Item", null, new { @class = "btn btn-primary", style="background-color:darkgreen"})
        </div>
        <div class="col">
            @Html.ActionLink("Ver Pedidos", "ListarPedidos", "Pedido", null, new { @class = "btn btn-primary", style="background-color: darkgreen"})
        </div>
        <div class="col">
            @Html.ActionLink("Ver vendas", "GraficoItens", "Item", null, new { @class = "btn btn-primary", style="background-color: darkgreen"})
        </div>
    </div>
</div>
<hr />
<h3>Itens do seu cardápio:</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantidadeDisponivel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ControlEstoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaminhoImagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantidadeDisponivel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ControlEstoque)
                </td>
                <td>
                    <img src="~/imagens/@item.CaminhoImagem" width=70 height=70>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
